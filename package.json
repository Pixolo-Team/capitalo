{
  "name": "capitalo",
  "displayName": "capitalo",
  "description": "Improve code documentation clarity and consistency with Capitalo - Pixolo's Capitalization Tool for VS Code. Automatically capitalize nouns in comments and ensure every comment starts with a capital letter.",
  "version": "0.0.1",
  "publisher": "Pixolo",
  "author": "Pixolo",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pixolo-Team/capitalo"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Pixolo-Team/capitalo/issues"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "icon.jpg",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "capitalo",
        "title": "Capitalo - Pixolo's Capitalization Tool for VS Code"
      }
    ],
    "keybindings": [
      {
        "when": "editorTextFocus && !editorReadonly",
        "command": "capitalo",
        "key": "alt+s"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
